<%= current_user.name %>'s Organizations: <br><br><br>
<% if @user_recent_activities.class == Array %>
  <% @user_organizations.each do |organization| %>
    Name: <%= organization.name %><br>
    <img src="<%= organization.image %>" alt=""><br>
    Description: <%= organization.description %><br><br>
  <% end %>
<% else %>
  <%= @user_recent_activities %>
<% end %>
